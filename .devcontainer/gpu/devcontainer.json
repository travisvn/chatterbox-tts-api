// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python GPU",
	"hostRequirements": {"gpu": true},

	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "${localWorkspaceFolder}/docker/Dockerfile.uv.gpu",
		"context": "${localWorkspaceFolder}"
	},

	// This would be most consistent with the way the Dockerfile is set up to run, but if we only mount
	// the app subdirectory, we don't have access to .git or .vscode in the project root.
	// "workspaceMount": "type=bind,src=${localWorkspaceFolder}/app,target=/app/app",
	// "workspaceFolder": "/app",

	"mounts": [
		"type=volume,src=chatterbox-models,target=/cache",
		"type=volume,src=chatterbox-voices,target=/voices"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [4123],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			],
			"settings": {
				"python.defaultInterpreterPath": "/app/.venv/bin/python",
				"python.terminal.activateEnvironment": true
			}
		}
	}
}
